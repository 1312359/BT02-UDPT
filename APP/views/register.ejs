<!DOCTYPE html>
<html>
<head>
    <title>Pssport</title>
    <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <style>
        body{
            padding-top: 70px;
            padding-bottom: 70px;
        }
    </style>

</head>

<body>


<div class="container">
    <div class="row">
        <div class="col-md-6">

            <form class="form-horizontal" action="" method="post">
                <fieldset>
                    <div id="legend">
                        <legend class="">Register</legend>
                    </div>
                    <div class="control-group">
                        <label class="control-label" for="name">name</label>
                        <div class="controls">
                            <input type="text" id="name" name="name" placeholder="name" class="form-control input-lg">

                        </div>
                    </div>

                    <div class="control-group">
                        <label class="control-label" for="email">E-mail</label>
                        <div class="controls">
                            <input type="email" id="email" name="email" placeholder="Email" class="form-control input-lg">
                            <p class="help-block">Please provide your E-mail</p>
                        </div>
                    </div>

                    <div class="control-group">
                        <label class="control-label" for="password">Password</label>
                        <div class="controls">
                            <input type="password" id="password" name="password" placeholder="password" class="form-control input-lg">
                            <p class="help-block">Password should be at least 6 characters</p>
                        </div>
                    </div>


                    <div class="control-group">
                        <!-- Button -->
                        <div class="controls">
                            <button class="btn btn-success">Register</button>
                        </div>
                    </div>
                </fieldset>
            </form>

        </div>
    </div>
</div>

</body>